@model UserDataModel

@{
    ViewData["Title"] = "User Details";
}

<h2>@Model.UserName's Account Details</h2>

@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-@(TempData["IsSuccess"] as bool? == true ? "success" : "danger")">
        @TempData["Message"]
    </div>
}
@if (Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">User ID:</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">UserName:</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Card Number:</dt>
        <dd class="col-sm-10">@Model.CardNumber</dd>

        <dt class="col-sm-2">NRC:</dt>
        <dd class="col-sm-10">@Model.NRC</dd>

        <dt class="col-sm-2">Balance:</dt>
        <dd class="col-sm-10"> @Convert.ToDecimal(Model.Balance).ToString("n2") $</dd>
    </dl>
}
else
{
    <p>User not found.</p>
}